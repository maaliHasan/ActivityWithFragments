<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp">


    <Button
        android:id="@+id/FBlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/FBlogin"
        android:background="@drawable/round"/>


    <Button
        android:id="@+id/ELogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FBlogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/ELogin"
        android:background="@drawable/round"/>
    <View
        android:layout_width="140dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/ELogin"
        android:id="@+id/LeftSeparator"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Or"
        android:text="@string/or"
        android:layout_marginTop="48dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ELogin"
        android:layout_toRightOf="@+id/LeftSeparator"
        android:textColor="#FFFFFFFF"/>
    <View
        android:layout_width="140dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/ELogin"
        android:id="@+id/rightSeparator"
        android:layout_toRightOf="@+id/Or"
        android:layout_marginTop="60dp"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Or"
        android:layout_marginTop="55dp"
        android:layout_centerHorizontal="true"
        android:text="@string/singUp"
        android:textColor="#FFFFFFFF"
        android:id="@+id/signUp"/>




</RelativeLayout>
