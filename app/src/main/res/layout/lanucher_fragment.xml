<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <Button
        android:id="@+id/FBlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/round"
        android:text="@string/FBlogin" />

    <Button
        android:id="@+id/ELogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FBlogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/round"
        android:text="@string/ELogin" />

    <View
        android:id="@+id/LeftSeparator"
        android:layout_width="140dp"
        android:layout_height="1dp"
        android:layout_below="@+id/ELogin"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/Or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ELogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_toRightOf="@+id/LeftSeparator"
        android:text="@string/or"
        android:textColor="#FFDAA520" />

    <View
        android:id="@+id/rightSeparator"
        android:layout_width="140dp"
        android:layout_height="1dp"
        android:layout_below="@+id/ELogin"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/Or"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Or"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/singUp"
        android:textColor="#FFFFFFFF" />

</RelativeLayout>
